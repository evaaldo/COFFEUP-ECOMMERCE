@model List<Ecommerce.Models.Produto>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Ecommerce</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Ecommerce.styles.css" asp-append-version="true" />

    <script src="https://kit.fontawesome.com/88cbac72fc.js" crossorigin="anonymous" defer></script>
</head>
<body>
    <section class="home">
        <nav>
            <h1>CoffeUp</h1>
            <a asp-controller="Usuarios" asp-action="Index">Gerenciar Produtos</a>
        </nav>
        <div class="sobre">
            <div>
                <h1>Dê um Up na energia<br/>com um café no precinho</h1>
                <p>A CoffeUp mostra diversas opções de café que você pode estar tomando em uma interface simples, bonita e objetiva. Dê uma olhada em nosso cardápio!</p>
                <a href="#cardapio">Ver cardápio</a>
            </div>
            <img src="~/img/graos-de-cafe-levitam-em-um-fundo-branco.jpg" alt="Grãos de café">
        </div>
        <div id="cardapio" class="containers">
            <div class="container container-amostra">
                <h3>Dê uma olhada em nossos cafés</h3>
                <i class="fa-solid fa-arrow-right"></i>
            </div>
            @foreach(Produto produto in Model)
            {
                <div class="container">
                    <h3>@produto.Nome</h3>
                    <p>@produto.Descricao</p>
                    <h4>R$ @produto.Preco</h4>
                    <a asp-action="Comprar" asp-route-id="@produto.ID" type="submit">Comprar</a>
                </div>
            }       
        </div>
        <footer>
            <h1>CoffeUp</h1>
        </footer>
    </section>
</body>
</html>
